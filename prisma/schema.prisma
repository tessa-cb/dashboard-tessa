// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Agent {
  id            String         @id @default(uuid())
  name          String
  role          String         @default("Generalist")
  status        String         @default("idle") // idle, working, paused, offline
  avatar        String?
  sessionKey    String?        // Moltbot session key for mapping
  tasks         Task[]
  comments      Comment[]
  notifications Notification[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Task {
  id          String    @id @default(uuid())
  title       String
  description String?
  status      String    @default("inbox") // inbox, assigned, in_progress, review, done, blocked
  priority    String    @default("medium") // low, medium, high
  agentId     String?
  agent       Agent?    @relation(fields: [agentId], references: [id])
  comments    Comment[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id])
  agentId   String?
  agent     Agent?   @relation(fields: [agentId], references: [id])
  isSystem  Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Notification {
  id        String   @id @default(uuid())
  type      String   // mention, system
  message   String
  read      Boolean  @default(false)
  agentId   String
  agent     Agent    @relation(fields: [agentId], references: [id])
  taskId    String?
  createdAt DateTime @default(now())
}

model Activity {
  id        String   @id @default(uuid())
  type      String   // log, agent_status, task_update
  message   String
  metadata  String?  // JSON string for extra details
  createdAt DateTime @default(now())
}
